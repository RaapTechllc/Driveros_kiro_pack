# DriverOS Environment Variables
# Copy this file to .env.local for local development

# Environment
NODE_ENV=development

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from your Supabase project dashboard:
# https://supabase.com/dashboard/project/_/settings/api

# Supabase URL (Project URL)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anon Key (public, safe to expose)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Service Role Key (private, server-side only)
# NEVER expose this in client-side code
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable demo mode (uses localStorage, no auth required)
NEXT_PUBLIC_DEMO_MODE=false

# CI/CD Configuration (set in CI pipelines)
# CI=true

# Development Server Configuration
# Default development port is 4005 (configured in package.json)
# PORT=4005

# Optional: Analytics & Monitoring (if enabled)
# NEXT_PUBLIC_ANALYTICS_ID=

# Optional: Feature Flags
# NEXT_PUBLIC_ENABLE_DEMO_MODE=true

# Stripe Configuration (Monetization)
# These keys would be provided by your Stripe dashboard
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_placeholder_key_12345
STRIPE_SECRET_KEY=sk_test_placeholder_key_67890
STRIPE_WEBHOOK_SECRET=whsec_placeholder_secret_abcde

# Pricing Table IDs (Stripe Product IDs)
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO_MONTHLY=price_pro_mo_123
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO_YEARLY=price_pro_yr_123
NEXT_PUBLIC_STRIPE_PRICE_ID_GROWTH_MONTHLY=price_growth_mo_123
NEXT_PUBLIC_STRIPE_PRICE_ID_GROWTH_YEARLY=price_growth_yr_123

# ===========================================
# AI COACH CONFIGURATION
# ===========================================
# Anthropic API key for the AI coaching agent
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Optional: Override the default model (claude-sonnet-4-5-20250929)
# ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Public URL (for callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:4005
