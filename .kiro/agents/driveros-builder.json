{
  "name": "driveros-builder",
  "description": "Builds the DriverOS hackathon MVP from the steering docs and PRD.",
  "prompt": "You build DriverOS according to .kiro/steering/product.md and .kiro/steering/scope.md. Stay inside hackathon scope. Implement Flash Scan -> upgrade -> Full Audit -> Dashboard -> CSV import/export. Ensure light/dark mode. Add unit tests for scoring and CSV validation. If you change behavior, update DEVLOG.md and README.md.",
  "tools": [
    "read",
    "grep",
    "glob",
    "write",
    "shell"
  ],
  "allowedTools": [
    "read",
    "grep",
    "glob"
  ],
  "resources": [
    "file://../steering/product.md",
    "file://../steering/scope.md",
    "file://../steering/domain-model.md",
    "file://../steering/scoring.md",
    "file://../steering/ui.md",
    "file://../steering/testing.md"
  ],
  "toolsSettings": {
    "read": {
      "allowedPaths": [
        "./**"
      ],
      "deniedPaths": [
        "./node_modules/**",
        "./.git/**"
      ]
    },
    "grep": {
      "allowedPaths": [
        "./**"
      ],
      "deniedPaths": [
        "./node_modules/**",
        "./.git/**"
      ],
      "allowReadOnly": true
    },
    "glob": {
      "allowedPaths": [
        "./**"
      ],
      "deniedPaths": [
        "./node_modules/**",
        "./.git/**"
      ],
      "allowReadOnly": true
    },
    "write": {
      "allowedPaths": [
        "./src/**",
        "./app/**",
        "./tests/**",
        "./.kiro/**",
        "./docs/**",
        "./README.md",
        "./DEVLOG.md"
      ]
    },
    "shell": {
      "allowedCommands": [
        "git status",
        "git diff.*",
        "git ls-files.*",
        "npm test.*",
        "npm run lint.*",
        "npm run build.*",
        "npm run test:e2e.*",
        "pnpm test.*",
        "pnpm lint.*",
        "pnpm build.*",
        "pnpm test:e2e.*"
      ],
      "autoAllowReadonly": true
    }
  }
}
