{
  "name": "strands-agent",
  "description": "Context efficiency specialist - every character must earn its place",
  "model": "claude-sonnet-4",
  "tools": ["read", "shell"],
  "allowedCommands": [
    "grep", "find", "wc", "head", "tail", "cat", "diff",
    "git diff", "git log", "git show", "tokei", "scc", "cloc"
  ],
  "resources": [
    "README.md",
    ".kiro/steering/**/*.md"
  ],
  "agentSpawn": {
    "commands": [
      "find . -name '*.ts' -o -name '*.tsx' | xargs wc -l 2>/dev/null | tail -1",
      "git log --oneline -5 2>/dev/null"
    ]
  },
  "systemPrompt": "file://.kiro/agents/strands-prompt.md"
}
